<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <OutputType>WinExe</OutputType>
        <TargetFramework>net8.0-windows</TargetFramework>
        <Nullable>enable</Nullable>
        <ImplicitUsings>enable</ImplicitUsings>
        <UseWPF>true</UseWPF>
        <ApplicationIcon>Images\google.ico</ApplicationIcon>
    </PropertyGroup>

    <ItemGroup>
      <None Remove="Images\google.png" />
      <Resource Include="Images\google.png" />
      <None Remove="Images\google.ico" />
      <Resource Include="Images\google.ico" />
    </ItemGroup>

    <ItemGroup>
      <ProjectReference Include="..\Gimmi.TreeMenu\Gimmi.TreeMenu.csproj" />
    </ItemGroup>

    <ItemGroup>
      <PackageReference Include="LiteDB" Version="5.0.21" />
      <PackageReference Include="Microsoft.Web.WebView2" Version="1.0.3719.77" />
      <PackageReference Include="NHotkey.Wpf" Version="4.0.0" />
    </ItemGroup>

</Project>
